@model Client;

<h2 class="title">EditPanel</h2>

<div class="row">
	<div class="col-6">
	<form asp-controller="Admin" asp-action="EditExactClient" asp-route-id="@Model.Id">
		<div>
		 <label class="form-label"></label>
		 <input asp-for="@Model.Name" type ="text" class="form-control"/>
		</div>

	   <div>
		<label class="form-label"></label>
		<input  asp-for="@Model.Email" type ="email" class="form-control" />
	   </div>

		<div>
		 <label class="form-label"></label>
		 <input asp-for="@Model.Message"  type ="text" class="form-control"/>
		</div>

		<div>
		<button type="submit" class="btn btn-outline-primary">
			Edit
	    </button>
		</div>

	 </form>
	</div>
 </div>